
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any authenticated user to read and write to the entire database.
    // The {document=**} is a recursive wildcard that matches any document in any collection.
    // This is the correct way to allow collection-level queries (list operations).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
