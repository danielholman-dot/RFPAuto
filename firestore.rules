/**
 * @fileoverview Firestore Security Rules for the MARCUS Automation Suite.
 *
 * Core Philosophy:
 * This ruleset enforces a combination of public read access for lookup data,
 * path-based ownership for user-specific data, and role-based access control
 * for collaborative and administrative data management. Data required for
 * authorization decisions is denormalized onto the secured documents to avoid
 * costly `get()` operations within the rules.
 *
 * Data Structure:
 * - /metro_codes/{metroCodeId}: Publicly readable metro codes.
 * - /contractor_types/{contractorTypeId}: Publicly readable contractor types.
 * - /contractors/{contractorId}: Contractor information, access controlled by system roles.
 * - /projects/{projectId}: Project details, access controlled by project membership (not yet implemented).
 * - /projects/{projectId}/eoi_emails/{eoiEmailId}: EOI emails, access controlled by project membership (not yet implemented). Includes denormalized 'projectId'.
 * - /projects/{projectId}/rfps/{rfpId}: RFPs, access controlled by project membership (not yet implemented). Includes denormalized 'projectId'.
 * - /rfps/{rfpId}/proposals/{proposalId}: Proposals, access controlled by RFP membership (not yet implemented). Includes denormalized 'rfpId'.
 * - /proposals/{proposalId}/scorecards/{scorecardId}: Scorecards, access controlled by Proposal membership (not yet implemented). Includes denormalized 'proposalId'.
 * - /projects/{projectId}/award_recommendations/{awardRecommendationId}: Award recommendations, access controlled by project membership (not yet implemented). Includes denormalized 'projectId'.
 * - /users/{userId}/feedback/{feedbackId}: Feedback from users, access controlled by path-based ownership.
 * - /technical_documents/{technicalDocumentId}: Technical documents, access controlled by system roles (not yet implemented).
 * - /documents/{documentId}: Generic documents, access controlled by association (not yet implemented).
 *
 * Key Security Decisions:
 * - Public read access is granted to the `metro_codes` and `contractor_types` collections.
 * - User feedback is secured using path-based ownership under `/users/{userId}`.
 * - Other collections have placeholder rules (`allow create, update, delete: if false;`) to prevent accidental open access.
 * - No `list` operations are globally allowed except for `metro_codes` and `contractor_types`.
 *
 * Denormalization for Authorization:
 * - Several subcollections (e.g., `eoi_emails`, `rfps`) denormalize the parent `projectId` or `rfpId` onto the document for simpler authorization rules. This avoids needing to perform costly `get()` operations in the rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to metro codes.
     * @path /metro_codes/{metroCodeId}
     * @allow (get, list) - Any user can read metro code data.
     * @deny (create, update, delete) - No user can modify metro code data.
     * @principle Public read access for lookup data.
     */
    match /metro_codes/{metroCodeId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to contractor types.
     * @path /contractor_types/{contractorTypeId}
     * @allow (get, list) - Any user can read contractor type data.
     * @deny (create, update, delete) - No user can modify contractor type data.
     * @principle Public read access for lookup data.
     */
    match /contractor_types/{contractorTypeId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Controls access to contractor information.
     * @path /contractors/{contractorId}
     * @allow None. Access to be controlled by system roles (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for role-based access control.
     */
    match /contractors/{contractorId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add role-based access control.
    }

    /**
     * @description Controls access to project details.
     * @path /projects/{projectId}
     * @allow None. Access to be controlled by project membership (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for membership-based access control.
     */
    match /projects/{projectId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add project membership access control.
    }

    /**
     * @description Controls access to EOI emails related to a project.
     * @path /projects/{projectId}/eoi_emails/{eoiEmailId}
     * @allow None. Access to be controlled by project membership (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for membership-based access control.
     */
    match /projects/{projectId}/eoi_emails/{eoiEmailId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add project membership access control.
    }

    /**
     * @description Controls access to RFPs related to a project.
     * @path /projects/{projectId}/rfps/{rfpId}
     * @allow None. Access to be controlled by project membership (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for membership-based access control.
     */
    match /projects/{projectId}/rfps/{rfpId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add project membership access control.
    }

    /**
     * @description Controls access to proposals submitted for an RFP.
     * @path /rfps/{rfpId}/proposals/{proposalId}
     * @allow None. Access to be controlled by RFP membership (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for membership-based access control.
     */
    match /rfps/{rfpId}/proposals/{proposalId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add RFP membership access control.
    }

    /**
     * @description Controls access to scorecards for proposals.
     * @path /proposals/{proposalId}/scorecards/{scorecardId}
     * @allow None. Access to be controlled by Proposal membership (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for membership-based access control.
     */
    match /proposals/{proposalId}/scorecards/{scorecardId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add Proposal membership access control.
    }

    /**
     * @description Controls access to award recommendations for projects.
     * @path /projects/{projectId}/award_recommendations/{awardRecommendationId}
     * @allow None. Access to be controlled by project membership (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for membership-based access control.
     */
    match /projects/{projectId}/award_recommendations/{awardRecommendationId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add project membership access control.
    }

    /**
     * @description Allows users to manage their own feedback.
     * @path /users/{userId}/feedback/{feedbackId}
     * @allow (create) - User can create feedback if the userId matches their auth.
     * @allow (get, list, update, delete) - User can access their own feedback.
     * @deny (create, update, delete) - User cannot modify another user's feedback.
     * @principle Path-based ownership for user-specific data.
     */
    match /users/{userId}/feedback/{feedbackId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId) && resource != null;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to technical documents.
     * @path /technical_documents/{technicalDocumentId}
     * @allow None. Access to be controlled by system roles (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for role-based access control.
     */
    match /technical_documents/{technicalDocumentId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add role-based access control.
    }

    /**
     * @description Controls access to generic documents.
     * @path /documents/{documentId}
     * @allow None. Access to be controlled by association (not yet implemented).
     * @deny All operations.
     * @principle Placeholder for association-based access control.
     */
    match /documents/{documentId} {
      allow get: if false;
      allow list: if false;
      allow create, update, delete: if false; // TODO: Add association-based access control.
    }

    // --- Helper Functions ---

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document based on the path.
     * @param {string} userId The user ID from the path.
     * @return {bool} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

        /**
     * @description Checks if the user is the owner of the existing document based on the path.
     * @param {string} userId The user ID from the path.
     * @return {bool} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }
  }
}