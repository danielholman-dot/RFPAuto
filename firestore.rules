
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to read/write all user documents
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Rules for RFPs
    match /rfps/{rfpId} {
      allow read, write: if request.auth != null;

      // Rules for subcollections of RFPs
      match /proposals/{proposalId} {
        allow read, write: if request.auth != null;
      }
      match /clarifications/{clarificationId} {
        allow read, write: if request.auth != null;
      }
    }

    // Rules for Contractors
    match /contractors/{contractorId} {
      allow read, write: if request.auth != null;
    }

    // Rules for Metro Codes
    match /metro_codes/{metroCodeId} {
      allow read, write: if request.auth != null;
    }
    
    // Rules for RFP evaluation checklists
    match /RFP_Weighting_evaluation/{rfpId} {
        allow read, write: if request.auth != null;
    }
  }
}
