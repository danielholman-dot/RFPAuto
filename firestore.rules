
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Grant any authenticated user read and write access to the entire database.
    // This rule allows list, get, create, update, and delete operations on all collections
    // for users who are signed in.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
