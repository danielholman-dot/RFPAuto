rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for RFPs and their subcollections
    match /rfps/{rfpId} {
      allow read, write: if request.auth != null;
      
      // Allow read/write to subcollections as well
      match /{allChildren=**} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Rules for contractors
    match /contractors/{contractorId} {
      allow read, write: if request.auth != null;
    }
    
    // Rules for metro codes
    match /metro_codes/{metroCodeId} {
      allow read, write: if request.auth != null;
    }
    
    // Rules for users
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
