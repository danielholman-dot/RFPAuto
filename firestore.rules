rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /rfps/{rfpId} {
      allow read, write: if request.auth != null;
    }

    match /contractors/{contractorId} {
      allow read, write: if request.auth != null;
    }

    match /metro_codes/{metroCodeId} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // This rule is for any subcollections, though the above should cover all current collections.
    match /{path=**}/{document} {
        allow read, write: if request.auth != null;
    }
  }
}
