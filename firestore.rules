rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write to top-level collections
    match /rfps/{rfpId} {
      allow read, write: if request.auth != null;
    }

    match /contractors/{contractorId} {
      allow read, write: if request.auth != null;
    }
    
    match /metro_codes/{metroCodeId} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to access subcollections
    match /rfps/{rfpId}/{subcollection}/{docId} {
      allow read, write: if request.auth != null;
    }

    // Fallback for any other path - deny by default
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
